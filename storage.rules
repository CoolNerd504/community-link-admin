rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload and manage their own service images
    match /users/{userId}/services/{serviceId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Group images - anyone can read, group owners can upload
    match /groups/{groupId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/groups/$(groupId)) &&
        get(/databases/$(database)/documents/groups/$(groupId)).data.ownerId == request.auth.uid;
    }
    
    // Session recordings - participants can access
    match /sessions/{sessionId}/{fileName} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/sessions/$(sessionId)) &&
        (get(/databases/$(database)/documents/sessions/$(sessionId)).data.clientId == request.auth.uid ||
         get(/databases/$(database)/documents/sessions/$(sessionId)).data.providerId == request.auth.uid);
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/sessions/$(sessionId)) &&
        (get(/databases/$(database)/documents/sessions/$(sessionId)).data.clientId == request.auth.uid ||
         get(/databases/$(database)/documents/sessions/$(sessionId)).data.providerId == request.auth.uid);
    }
    
    // Dispute evidence - participants can access
    match /disputes/{disputeId}/{fileName} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/disputes/$(disputeId)) &&
        (get(/databases/$(database)/documents/disputes/$(disputeId)).data.clientId == request.auth.uid ||
         get(/databases/$(database)/documents/disputes/$(disputeId)).data.providerId == request.auth.uid ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin');
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/disputes/$(disputeId)) &&
        (get(/databases/$(database)/documents/disputes/$(disputeId)).data.clientId == request.auth.uid ||
         get(/databases/$(database)/documents/disputes/$(disputeId)).data.providerId == request.auth.uid);
    }
    
    // System assets - anyone can read, only admins can upload
    match /system/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
    
    // Temporary uploads - users can upload to their own temp folder
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 